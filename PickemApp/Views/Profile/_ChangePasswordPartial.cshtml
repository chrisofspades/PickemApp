@model PickemApp.ViewModels.ProfileChangePassword

@using (Html.BeginForm("ChangePassword", "Profile")) {
    <fieldset>
        <legend>Change Password</legend>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })

        <div class="form-group">
            @Html.LabelFor(f => f.OldPassword, new { @class = "control-label" })
            @Html.EditorFor(f => f.OldPassword, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(f => f.NewPassword, new { @class = "control-label" })
            @Html.EditorFor(f => f.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(f => f.ConfirmPassword, new { @class = "control-label" })
            @Html.EditorFor(f => f.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <input type="submit" value="Change Password" class="btn btn-primary" />
    </fieldset>
}
