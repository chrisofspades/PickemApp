@model IEnumerable<PickemApp.Models.Pick>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Player.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Game.Eid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeamPicked)
        </th>
